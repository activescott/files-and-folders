{
  "name": "dedupe-files",
  "version": "1.0.0",
  "description": "Finds all duplicate files across the set of paths and then will **print** them out, **move** them to a directory, or **delete** them. Duplicates are identified by their actual content not their name or other attributes.",
  "main": "dist/es/index.js",
  "types": "dist/es/index.d.ts",
  "type": "module",
  "engines": {
    "node": ">=16.14.0"
  },
  "bin": {
    "dedupe-files": "dist/es/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "author": {
    "name": "Scott Willeke",
    "email": "scott@willeke.com",
    "url": "https://scott.willeke.com"
  },
  "license": "MIT",
  "keywords": [
    "cli",
    "files",
    "filesystem"
  ],
  "repository": "github:activescott/files-and-folders",
  "homepage": "https://github.com/activescott/files-and-folders/blob/main/packages/dedupe-files/README.md",
  "bugs": {
    "url": "https://github.com/activescott/files-and-folders/issues"
  },
  "dependencies": {
    "commander": "^9.3.0",
    "irritable-iterable": "^1.3.1"
  },
  "devDependencies": {
    "@activescott/eslint-config": "^2.3.5",
    "@tsconfig/node16-strictest-esm": "^1.0.1",
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.39",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "coveralls": "^3.1.1",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "jest": "^28.1.0",
    "prettier": "^2.6.2",
    "ts-jest": "^28.0.3",
    "typescript": "^4.7.2"
  },
  "scripts": {
    "build:es": "rm -rfd ./dist/es; ./node_modules/.bin/tsc --project tsconfig.json",
    "build": "rm -rfd ./dist && npm run build:es",
    "eslint": "./node_modules/.bin/eslint . --ext ts,tsx,js,jsx",
    "lint": "./node_modules/.bin/prettier -l \"{,!(node_modules)/**/}*.{ts,tsx,md,yml,json,html}\" && npm run eslint",
    "lint-fix": "./node_modules/.bin/prettier --write \"{,!(node_modules)/**/}*.{ts,tsx,md,yml,json,html}\" && npm run eslint --fix",
    "test": "./node_modules/.bin/jest --coverage",
    "te": "./node_modules/.bin/jest",
    "watch": "./node_modules/.bin/jest --watch --testPathIgnorePatterns performance.spec",
    "dev": "npm run watch",
    "pretest": "npm run lint",
    "coverage-publish": "cat ./coverage/lcov.info | coveralls",
    "prepare": "cd ../.. && husky install packages/dedupe-files/.husky"
  }
}
